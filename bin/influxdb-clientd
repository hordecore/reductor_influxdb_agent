#!/bin/bash

ROOTDIR=/opt/reductor_time_tests/
while sleep 2; do
	datafile="$(find $ROOTDIR/var/tests/ -type f | head -1)"
	if [ -z "$datafile" ]; then
		continue
	fi
	$ROOTDIR/bin/influxdb-client --rootdir=$ROOTDIR --plain=$datafile
	retval=$?
	if [ "$retval" != '0' ]; then
		echo error $retval
	else
		echo $datafile sent ok
	fi
done
